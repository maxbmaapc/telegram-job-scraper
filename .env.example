# Telegram API Credentials
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_here

# Target Groups/Channels (comma-separated)
# You can find channel IDs by forwarding a message from the channel to @userinfobot
TARGET_CHANNELS=channel1_id,channel2_id,channel3_id

# Filter Keywords (comma-separated)
FILTER_KEYWORDS=junior,remote,london,react,node.js,typescript,python,vue.js,ionic,aws,nosql,backend,frontend,full stack

# Date Filter (in hours, 0 = no filter)
DATE_FILTER_HOURS=24

# Output Settings
OUTPUT_METHOD=telegram  # Options: telegram, file, database
SEND_TO_SELF=true

# Database Settings (if using database output)
DATABASE_PATH=jobs.db

# Logging
LOG_LEVEL=INFO

# Web UI Settings (optional)
WEB_HOST=localhost
WEB_PORT=5000

# Scheduling Settings (for scheduled mode)
SCHEDULE_INTERVAL_MINUTES=30  # How often to scrape (in minutes)
SCHEDULE_START_TIME=09:00     # Start time (24-hour format, optional)
SCHEDULE_END_TIME=18:00       # End time (24-hour format, optional)
SCHEDULE_DAYS_OF_WEEK=0,1,2,3,4,5,6  # Days to run (0=Monday, 6=Sunday)
SCHEDULE_MAX_RUNS_PER_DAY=10  # Maximum runs per day (0 = unlimited)